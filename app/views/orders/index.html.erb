<h1>我的订单</h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th>仪器名称</th>
    <th>仪器编号</th>
    <th>预约起始时间</th>
    <th>预约结束时间</th>
    <th>审核状态</th>
    <th>审核信息</th>
  </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
      <tr>
        <td><%= order.equipment_name %></td>
        <td><%= order.equipment_num %></td>
        <td><%= order.use_start_date %></td>
        <td><%= order.use_end_date %></td>
        <% if order.check_status.nil? %>
        <td>未审核</td>
        <% elsif order.check_status %>
        <td id="check_success">已审核，预约成功</td>
        <% else %>
        <td id="check_fail">已审核，预约失败</td>
        <% end %>
        <td><%= order.message %></td>
      </tr>
  <% end %>
  </tbody>
</table>